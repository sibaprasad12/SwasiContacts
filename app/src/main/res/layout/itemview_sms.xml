<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="smsdata"
            type="com.swasi.utility.ui.messages.SmsData" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical"
            android:padding="3dp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSmsNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{smsdata.number}"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSmsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{smsdata.content}"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSmsNumber"
                tools:Text="Mobile Number" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSmsOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{smsdata.otp}"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSmsContent"
                tools:text="Hello" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSmsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{smsdata.date}"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSmsContent"
                tools:text="Hello" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>